= form_for(@post) do |f| 
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :author
    %br/
    = f.text_field :name
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :intro
    %br/
    = f.text_area :intro, :class => "tinymce", :rows => 16, :cols => 60
    %br/
    = f.label :content
    %br/
    = f.text_area :content, :class => "tinymce", :rows => 30, :cols => 60
    = tinymce
  .field
    = f.label :watercolor_or_other_image
    %br/
    = f.file_field :watercolor
  .field
    = f.label :tag_list, "Tags (separated by commas)"
    = f.text_field :tag_list
  .actions
    = f.submit